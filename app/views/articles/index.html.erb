<div id="page-content">

  <h1 class="text-center mt-4"> Listing all articles </h1>

  <div class="container  ">
    <% @article.each do |article| %>
      <div class="row justify-content-md-center ">
        <div class="col-8  mt-4">
          <div class="card text-center shadow mb-4 bg-white rounded">
            <div class="card-header font-italic">
              by Faruk GÃ¼rlesin
            </div>
            <div class="card-body">
              <h5 class="card-title  "><%= link_to article.tittle , article_path(article) , class:"font-weight-bold text-dark text-capitalize" %></h5>
              <p class="card-text"><%= truncate(article.description,length:50 ) %></p> 
               <%= link_to 'Delete' , article_path(article.id) ,  method: :delete , data: {confirm:"Are you sure ?"} , class:"btn-sm btn-dark" %> 
               <%= link_to 'Edit' , edit_article_path(article) , class:"btn-sm btn-dark" %>  
               <%= link_to 'View' , article_path(article) , class:"btn-sm btn-dark"  %>
                 
               
            </div>
            <div class="card-footer text-muted">
              <small>Created <%=time_ago_in_words(article.created_at)%> ago  , Edited <%=time_ago_in_words(article.created_at)%> ago </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @article.each do |article| %>
      <tr>
        <td><%= article.tittle  %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Delete' , article_path(article.id) , method: :delete , data: {confirm:"Are you sure ?"} %></td>
        <td><%= link_to 'Edit' , edit_article_path(article) %> </td>
        <td><%= link_to 'Show' , article_path(article)   %> </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<p>
<%= link_to 'Create New Post' , new_article_path(@article)   %>
</p>